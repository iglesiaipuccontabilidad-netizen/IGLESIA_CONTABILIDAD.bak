        return;
      }

      // Obtener los miembros relacionados
      const miembrosIds = votosData.map(voto => voto.miembro_id);
      const { data: miembrosData, error: miembrosError } = await supabase
        .from('miembros')
        .select('id, nombres, apellidos')
        .in('id', miembrosIds)
        .returns<Miembro[]>();

      if (miembrosError) {
        console.error('Error al obtener miembros:', miembrosError);
        throw miembrosError;
      }

      console.log('Miembros obtenidos:', miembrosData?.length || 0);

      // Combinar los datos con tipos correctos
      const datosCompletos: VotoConMiembro[] = votosData.map(voto => ({
        ...voto,
        miembros: miembrosData?.find(miembro => miembro.id === voto.miembro_id) || null
      }));
        
      console.log('Votos combinados:', datosCompletos.length);
      console.log('Datos crudos recibidos:', JSON.stringify(datosCompletos, null, 2));
      console.log('Datos de votos recibidos:', datosCompletos.length, 'registros')
      
      // Validar la estructura de los datos recibidos
      const votosValidos = datosCompletos.filter((voto: VotoConMiembro) => 
        voto &&
        voto.miembros &&
        voto.miembros.nombres &&
        voto.miembros.apellidos
      );
      
      console.log('Votos válidos:', votosValidos.length)
      setVotos(votosValidos)
    } catch (err: any) {
      console.error('Error al cargar votos:', err)
    } finally {
      setLoading(false)
    }
  }

  const votosFiltrados = votos.filter(voto => {
    // Solo aplicar filtros si hay términos de búsqueda
    const nombreCompleto = voto.miembros ? 
      `${voto.miembros.nombres} ${voto.miembros.apellidos}`.toLowerCase() :
      '';
    const busquedaMin = filtros.busqueda.toLowerCase()
    
    // Validar proposito antes de usar toLowerCase()
    const propositoLower = voto.proposito?.toLowerCase() || ''
    
    const cumpleBusqueda = !filtros.busqueda || 
      nombreCompleto.includes(busquedaMin) || 
      propositoLower.includes(busquedaMin)
    
    const cumpleProposito = !filtros.proposito || voto.proposito === filtros.proposito
    const cumpleEstado = !filtros.estado || voto.estado === filtros.estado

    return cumpleBusqueda && cumpleProposito && cumpleEstado
  })

  const formatearMonto = (monto: number) => {
    return new Intl.NumberFormat('es-CO', {
      style: 'currency',
      currency: 'COP',
      minimumFractionDigits: 0,
      maximumFractionDigits: 0
    }).format(monto)
  }

  const formatearFecha = (fecha: string) => {
    return new Date(fecha).toLocaleDateString('es-CO', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    })
  }

  const calcularProgreso = (total: number, recaudado: number | null) => {
    if (!recaudado) return 0
    return Math.round((recaudado / total) * 100)
  }

  return (
    <div className="container">
      <div className={headerStyles.header}>
        <h1 className={headerStyles.title}>
          <svg xmlns="http://www.w3.org/2000/svg" className="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
            <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/>
            <path d="M14 2v4a2 2 0 0 0 2 2h4"/>
            <path d="m8 12 2 2 4-4"/>
          </svg>
          Votos
        </h1>
        <Link href="/dashboard/votos/nuevo" className={headerStyles.buttonPrimary}>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={2} stroke="currentColor">
            <path strokeLinecap="round" strokeLinejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          Nuevo Voto
        </Link>
      </div>

      <div className={headerStyles.filters}>
        <input
          type="text"
          placeholder="Buscar por nombre o propósito..."
          value={filtros.busqueda}
          onChange={(e) => setFiltros(prev => ({ ...prev, busqueda: e.target.value }))}
          className={headerStyles.searchInput}
        />
        <select
          value={filtros.proposito}
          onChange={(e) => setFiltros(prev => ({ ...prev, proposito: e.target.value }))}
          className={headerStyles.select}
        >
          <option value="">Todos los propósitos</option>
          <option value="Templo">Templo</option>
          <option value="Misiones">Misiones</option>
          <option value="Evangelización">Evangelización</option>
        </select>
        <select
          value={filtros.estado}
          onChange={(e) => setFiltros(prev => ({ ...prev, estado: e.target.value }))}
          className={headerStyles.select}
        >
          <option value="">Todos los estados</option>
          <option value="activo">Activo</option>
          <option value="completado">Completado</option>
          <option value="vencido">Vencido</option>
        </select>
      </div>

      {loading ? (
        <div className={loadingStyles.loading}>
          <div className={loadingStyles.spinner} />
          Cargando votos...
        </div>
      ) : (
        <div className={tableStyles.tableWrapper}>
          <table className={tableStyles.table}>
            <thead>
              <tr>
                <th>Miembro</th>
                <th>Propósito</th>
                <th>Monto Comprometido</th>
                <th>Monto Recaudado</th>
                <th>Progreso</th>
                <th>Fecha Límite</th>
                <th>Estado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              {votosFiltrados.length > 0 ? (
                votosFiltrados.map(voto => (
                  <tr key={voto.id}>
                    <td>{voto.miembros ? `${voto.miembros.nombres} ${voto.miembros.apellidos}` : 'Miembro no encontrado'}</td>
                    <td>{voto.proposito}</td>
                    <td>{formatearMonto(voto.monto_total)}</td>
                    <td>{formatearMonto(voto.recaudado || 0)}</td>
                    <td>
                      <div className={tableStyles.progressBar}>
                        <div 
                          className={tableStyles.progressFill}
                          style={{width: `${calcularProgreso(voto.monto_total, voto.recaudado)}%`}}
                        />
                        <span>{calcularProgreso(voto.monto_total, voto.recaudado)}%</span>
                      </div>
                    </td>
                    <td>{formatearFecha(voto.fecha_limite)}</td>
                    <td>
                      <span className={`${tableStyles.badge} ${tableStyles[voto.estado]}`}>
                        {voto.estado}
                      </span>
                    </td>
                    <td>
                      <Link 
                        href={`/dashboard/votos/${voto.id}`}
                        className={tableStyles.actionButton}
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="w-5 h-5">
                          <path strokeLinecap="round" strokeLinejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                          <path strokeLinecap="round" strokeLinejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        Ver
                      </Link>
                    </td>
                  </tr>
                ))
              ) : (
                <tr>
                  <td colSpan={8} className={tableStyles.emptyMessage}>
                    {loading ? 'Cargando votos...' : 'No se encontraron votos'}
                  </td>
                </tr>
              )}
            </tbody>
          </table>
        </div>
      )}
    </div>
  )
}